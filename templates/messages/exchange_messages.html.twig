{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Messages</h1>
        <div class="row chat ">
            <div class="col-md-8 offset-md-2">
                {% for message in messages %}
                    {####### This is the line that causes the error => Faire une many to one#######}
                    <div class="card {% if message.createdBy.id == app.user.id %}border-primary float-end clear-both{% else %}border-secondary float-left{% endif %} mb-3">
                        <div class="card-body">
                            <p class="card-text">{{ message.content }}</p>
                            <div class="card-footer text-muted small">{{ message.createdBy.email }}, {{ message.createdAt|date('d/m/Y H:i') }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
        <div class="col-md-8 offset-md-2 ">

            <div class="card">
                {{ form_start(form) }}
                <div class="card-body d-flex">
                    {{ form_widget(form.content, {'attr': {'class': 'form-control message-bar', 'placeholder': 'Saisir un message...'}}) }}
                    <input type="submit" value="{{ submitButtonText|default('Submit') }}" class="send-button" formnovalidate>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="mt-6"></div>

    </div>
{% endblock %}
